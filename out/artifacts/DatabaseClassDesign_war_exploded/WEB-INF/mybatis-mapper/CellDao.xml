<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="myj2ee.dao.CellDao">
    <insert id="addCell">
        insert into tbcell
        <foreach collection="columns" item="column" separator="," open="(" close=")">
            ${column}
        </foreach>
        values
        <if test = "cells.size > 0">
            <foreach collection="cells" item="cell" separator=",">
                <foreach collection="cell" item="attribute" separator="," open="(" close=")">
                    #{attribute}
                </foreach>
            </foreach>
        </if>
        on duplicate KEY UPDATE
        <foreach collection="columns" item="column" separator=",">
            ${column} = VALUES(${column})
        </foreach>
    </insert>

    <select id="getAllCell" resultType="java.util.Map" resultSetType="FORWARD_ONLY" fetchSize="-2147483648">
        select * from tbcell
    </select>

    <select id="getAllSectorId" resultType="String">
        select SECTOR_ID from tbcell
    </select>

    <select id="getAllSectorName" resultType="String">
        select SECTOR_NAME from tbcell
    </select>
    
    <select id="getAllENODEBID" resultType="Integer">
        select distinct (ENODEBID) from tbcell
    </select>

    <select id="getAllENODEBNAME" resultType="String">
        select distinct (ENODEB_NAME) from tbcell
    </select>

    <select id="getCellbySectorID" resultMap="infoCell">
        select * from tbcell where SECTOR_ID = #{SECTOR_ID}
    </select>

    <select id="getCellbySectorName" resultMap="infoCell">
        select * from tbcell where SECTOR_NAME = #{SECTOR_NAME}
    </select>

    <select id="getCellbyENODEBID" resultMap="infoCell">
        select * from tbcell where ENODEBID = #{ENODEBID}
    </select>

    <select id="getCellbyENODEBNAME" resultMap="infoCell">
        select * from tbcell where ENODEB_NAME = #{ENODEB_NAME}
    </select>

    <select id="getAllColumnName" parameterType="java.lang.String" resultType="java.lang.String">
        select COLUMN_NAME
        from information_schema.COLUMNS
        WHERE TABLE_NAME = 'tbCell'
        order by ORDINAL_POSITION
    </select>

    <select id="getRowCount" resultType="java.lang.Integer">
        select count(*) from tbcell
    </select>

    <resultMap id="infoCell" type="myj2ee.bean.Cell">
        <result property="city" column="CITY"/>
        <result property="sectorId" column="SECTOR_ID"/>
        <result property="sectorName" column="SECTOR_NAME"/>
        <result property="enodebId" column="ENODEBID"/>
        <result property="enodebName" column="ENODEB_NAME"/>
        <result property="earfcn" column="EARFCN"/>
        <result property="pci" column="PCI"/>
        <result property="pss" column="PSS"/>
        <result property="sss" column="SSS"/>
        <result property="tac" column="TAC"/>
        <result property="vendor" column="VENDOR"/>
        <result property="longitude" column="LONGITUDE"/>
        <result property="latitude" column="LATITUDE"/>
        <result property="style" column="STYLE"/>
        <result property="azimuth" column="AZIMUTH"/>
        <result property="height" column="HEIGHT"/>
        <result property="electtilt" column="ELECTTILT"/>
        <result property="mechtilt" column="MECHTILT"/>
        <result property="totletilt" column="TOTLETILT"/>
    </resultMap>
</mapper>