<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="myj2ee.dao.MRODataDao">
    <insert id="addMROData">
        insert into tbmrodata
        <foreach collection="columns" item="column" separator="," open="(" close=")">
            ${column}
        </foreach>
        values
        <if test = "mrodatas.size > 0">
            <foreach collection="mrodatas" item="mrodata" separator=",">
                <foreach collection="mrodata" item="attribute" separator="," open="(" close=")">
                    #{attribute}
                </foreach>
            </foreach>
        </if>
        on duplicate KEY UPDATE
        <foreach collection="columns" item="column" separator=",">
            ${column} = VALUES(${column})
        </foreach>
    </insert>

    <select id="getAllMROData" resultType="java.util.Map" resultSetType="FORWARD_ONLY" fetchSize="-2147483648">
        select * from tbmrodata
    </select>

    <select id="getAllColumnName" parameterType="java.lang.String" resultType="java.lang.String">
        select COLUMN_NAME
        from information_schema.COLUMNS
        WHERE TABLE_NAME = 'tbMROData'
        order by ORDINAL_POSITION
    </select>

    <select id="getRowCount" resultType="java.lang.Integer">
        select count(*) from tbmrodata
    </select>
    
    <select id="calculateC2I" resultType="java.util.Map">
        select ServingSector as SCELL, interferingSector as NCELL, avg(LteScRSRP - LteNcRSRP) as C2I_mean, std(LteScRSRP - LteNcRSRP) as C2I_std
        from tbmrodata
        group by ServingSector, interferingSector
    </select>

    <resultMap id="infoMROData" type="myj2ee.bean.MROData">
        <result property="TimeStamp" column="TimeStamp"/>
        <result property="ServingSector" column="ServingSector"/>
        <result property="interferingSector" column="interferingSector"/>
        <result property="LteScRSRP" column="LteScRSRP"/>
        <result property="LteNcRSRP" column="LteNcRSRP"/>
        <result property="LteNcEarfcn" column="LteNcEarfcn"/>
        <result property="LteNcPci" column="LteNcPci"/>
    </resultMap>


</mapper>